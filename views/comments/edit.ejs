<%include ../partials/header %>

<div class="container" >

<!-- sends form to update comment -->
<div class="row" style="margin: 0 auto;">
        <form class="mx-auto" action="/pops/<%= pop._id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="nameInput"></label>
                <input class="col-sm-12 col-lg-12" id="nameInput" type="text" name="comment[text]" placeholder="<%= comment.text %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
        </form>
</div>
<p class="text-center">
        <a href="/pops">Go Back</a>
</p>
</div>

<%include ../partials/footer %>