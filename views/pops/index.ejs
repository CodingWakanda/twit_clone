<%include ../partials/header %>
<div class="container">
    <header>
        <h1 class="text-center">TwitClone</h1>
        <p class="text-center">Scroll through the Pops</p>
        <p class="text-center">
            <a class="btn btn-danger" href="/pops/new">Add New</a>
        </p>
        
    </header>
    <div class="col-sm-12">
        <% pops.forEach((pop)=>{ %>
            <div class="col-auto my-2">
                <div class="card w-100">
                    <p class="text-center mt-4"><strong>@<%= pop.author.username %></strong></p>
                    <p class="text-center"><%= pop.poptext %></p>
                    <div class="row col-sm-5">
                        <% if(currentUser && pop.author.id.equals(currentUser._id)){ %>
                            <p class="col-sm-4 text-center">
                                <a class="btn btn-danger btn-sm" href="/pops/<%= pop._id %>/edit">Edit Pop</a>
                            </p>
                            <form class="col-sm-4" action="/pops/<%= pop._id %>?_method=DELETE" method="POST">
                                <button id="show-delete" class="btn btn-danger btn-sm mx-auto">Delete Post</button>
                            </form>
                        <% } %>
                        <p class="col-sm-4 text-center">
                            <a class="btn btn-danger btn-sm" href="/pops/<%= pop._id %>">Reply</a>
                        </p>
                    </div>
                </div>
                
            </div>
        <%});%>
    </div>  
</div>

<%include ../partials/footer %>
